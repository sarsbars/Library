@model Library.Models.User
@using Library.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create User";
}

<h2>Create User</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="Html.GetEnumSelectList<RoleType>()"></select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="LocationID">Location</label>
        <select asp-for="LocationID" asp-items="@(new SelectList(ViewBag.Locations, "LocationID", "LocationName"))">
            <option value="">-- Select Location --</option>
        </select>
        <span asp-validation-for="LocationID" class="text-danger"></span>
    </div>

    <button type="submit">Create</button>
    <a asp-action="Index">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
