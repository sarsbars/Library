@model Library.Models.Location

<h2>Edit Location</h2>

<form asp-action="Edit" method="post">
    <input asp-for="LocationID" type="hidden" />

    <div class="form-group">
        <label asp-for="LocationName">Location Name</label>
        <select asp-for="LocationName" class="form-control" asp-items="@ViewBag.LocationNameList"></select>
        <span asp-validation-for="LocationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" type="text" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}