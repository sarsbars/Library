@model Library.Models.Location

<h2>Delete Location</h2>
<h3>Are you sure you want to delete this location?</h3>

<div class="card">
    <div class="card-body">
        <p><strong>Location Name:</strong> @(Model.LocationName == LocationNameType.Custom ? Model.CustomName : Model.LocationName.ToString())</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input asp-for="LocationID" type="hidden" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>