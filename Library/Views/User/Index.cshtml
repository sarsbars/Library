@model UserFilterViewModel
@using Library.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "User";
}

<h2>User List</h2>

<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" asp-items="@(new SelectList(Model.RoleList, "Value", "Text", Model.Role))" class="form-select">
                <option value="">-- All Roles --</option>
            </select>
        </div>

        <div class="col-auto">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="col-auto">
            <label asp-for="Location" class="form-label">Location</label>
            <select asp-for="Location" asp-items="@(new SelectList(Model.LocationList, "Value", "Text", Model.Location))" class="form-select">
                <option value="">-- All Locations --</option>
            </select>
        </div>

        <div class="col-auto mt-4">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Clear Filters</a>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Role</td>
            <td>@user.Email</td>
            <td>@user.Location?.LocationName</td>
            <td>
                @if (User.IsInRole("Admin") ||
                    (User.IsInRole("Staff") && user.Role != RoleType.Admin) ||
                    (User.IsInRole("Reader") && User.Identity.Name == user.Email))
                {
                    <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-sm btn-warning me-1">Edit</a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@user.UserID" class="btn btn-sm btn-danger">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@if (User.IsInRole("Admin") || User.IsInRole("Staff"))
{
    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">Create New User</a>
    </div>
}
