@model Book

<h2>Are you sure you want to delete this book?</h2>
<p>Deleted books cannot be recovered</p>

<h3>@Model.Title</h3>
<strong>@Model.Author</strong>

<div>
    <p>@Model.Genre</p>
    <p>Published on @Model.PublicationDate</p>
    <p>Condition: @Model.Condition</p>
    @if(Model.IsAvailable)
    {
        <p>Currently Available</p>
    } else
    {
        <p>Currently Unavailable</p>
    }
    <p>Can be found at @ViewBag.BookLocation | Shelf @Model.LocationInLibrary</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookID" />
        <button type="submit">Delete</button>
        <a asp-action="Index">Cancel</a>
    </form>

</div>

<a asp-controller="Book" asp-action="Index">Back to selection</a>