<h3>✅ Available Books</h3>
<ul class="list-group mb-4">
    @foreach (var book in Model.AvailableBooks)
    {
        <li class="list-group-item">@book.Title by @book.Author</li>
    }
</ul>

<h3>🏆 Top Borrowers</h3>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>User</th>
            <th>Total Loans</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.TopBorrowers)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Loans.Count</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h3>📍 Location with Most Borrows</h3>
@if (Model.LocationWithMostBorrows != null)
{
    <p class="alert alert-secondary">
        <strong>@Model.LocationWithMostBorrows.Name</strong>  
        (Borrows: @Model.LocationWithMostBorrows.Books.Sum(b => b.Loans.Count))
    </p>
}
else
{
    <p class="alert alert-warning">No location data available.</p>
}